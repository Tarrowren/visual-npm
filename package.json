{
	"name": "visual-npm",
	"displayName": "visual npm",
	"description": "npm 可视化界面",
	"version": "0.0.1",
	"publisher": "Tarrow",
	"license": "MIT",
	"keywords": [
		"npm",
		"visualization"
	],
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:visual-npm-local",
		"onView:visual-npm-global"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [{
				"id": "visual-npm",
				"title": "visual npm",
				"icon": "img/dep.svg"
			}]
		},
		"views": {
			"visual-npm": [{
				"id": "visual-npm-local",
				"name": "local"
			}, {
				"id": "visual-npm-global",
				"name": "global"
			}]
		},
		"menus": {
			"view/title": [{
				"command": "local.refresh",
				"when": "view == visual-npm-local",
				"group": "navigation"
			}, {
				"command": "global.refresh",
				"when": "view == visual-npm-global",
				"group": "navigation"
			}],
			"view/item/context": [{
				"command": "local.module.update",
				"when": "view == visual-npm-local && viewItem == node-module",
				"group": "inline"
			}, {
				"command": "global.module.update",
				"when": "view == visual-npm-global && viewItem == node-module",
				"group": "inline"
			}, {
				"command": "local.module.checkUpdate",
				"when": "view == visual-npm-local && viewItem == node-module",
				"group": "inline"
			}, {
				"command": "global.module.checkUpdate",
				"when": "view == visual-npm-global && viewItem == node-module",
				"group": "inline"
			}]
		},
		"commands": [{
			"command": "local.refresh",
			"title": "Refresh",
			"icon": {
				"light": "img/light/refresh.svg",
				"dark": "img/dark/refresh.svg"
			}
		}, {
			"command": "global.refresh",
			"title": "Refresh",
			"icon": {
				"light": "img/light/refresh.svg",
				"dark": "img/dark/refresh.svg"
			}
		}, {
			"command": "local.module.checkUpdate",
			"title": "Check Update",
			"icon": {
				"light": "img/light/refresh.svg",
				"dark": "img/dark/refresh.svg"
			}
		}, {
			"command": "global.module.checkUpdate",
			"title": "Check Update",
			"icon": {
				"light": "img/light/refresh.svg",
				"dark": "img/dark/refresh.svg"
			}
		}, {
			"command": "local.module.update",
			"title": "Update",
			"icon": {
				"light": "img/light/edit.svg",
				"dark": "img/dark/edit.svg"
			}
		}, {
			"command": "global.module.update",
			"title": "Update",
			"icon": {
				"light": "img/light/edit.svg",
				"dark": "img/dark/edit.svg"
			}
		}]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^10.2.0",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.10"
	},
	"homepage": "https://github.com/Tarrowren/visual-npm/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/Tarrowren/visual-npm"
	},
	"bugs": {
		"url": "https://github.com/Tarrowren/visual-npm/issues"
	}
}